<div id="container" class="container">
  <div class="center">
    <h1 id="top">HAMBURGLAR!</h1>
    <h2>Add a Burger you want Hamburglar to eat and then hit "Rubble Rubble"</h2>

    <a href="#video"><img src="./assets/img/burger.png"></a>

    <form action="/api/burgers" method="POST" class="create-form">

      <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name" name="burger-name">
      </div>

      <button type="submit">Add Burger</button>

    </form>
  </div>

<div class="left">
    <ul>
  
  {{#each burgers}}
    
      {{#unless devoured}}
      <li>
        {{this.burger_name}}
        <button class="eat-burger" data-id="{{this.id}}" data-devoured="true">"Rubble Rubble!" &#8594; &#8594;</button>
  
      </li>
        {{/unless}}

      {{/each}}
    </ul>
  </div>


  <div class="right">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{this.burger_name}}
        <button class="eat-burger" data-id="{{this.id}}" data-devoured="false"> &#8656; &#8656; Regurgitate </button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
    

<div class="footer">
<iframe id="video" width="280" height="157" src="https://www.youtube.com/embed/AoAkycfGaik" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<br>
<a href="#top"><button type="button">Back to Burgers</button></a>
</div>
</div>
